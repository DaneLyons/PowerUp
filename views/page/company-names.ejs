    $('.heading .company.button').click(function(){
			generate_name();
    });

		random_name();
	});
	
	function generate_name(){
		var name = "",
		  minLen = 2,
		  maxLen = 5;
		  
		// get random int within range. code taken from MDN example
		var len = Math.floor(Math.random() * (maxLen - minLen + 1)) + minLen;
		
		for (var i = 0; i < len; i++) {
		  // start w/ consonant pair, and insert vowels for every other pair
		  var getVowel = (i % 2 !== 0);
		  var pair = "";
		  if (getVowel) {
		    pair = vowelPairs[Math.floor(Math.random() * vowelPairs.length)];
		  } else {
		    pair = consPairs[Math.floor(Math.random() * consPairs.length)];
		  }
		  name += pair;
		}
		name = name.toUpperCase();
		$('#band_name').text(name);
	}
	
	function random_name(){
		$('#sortable input').each(function(){
			var elem = $(this);
			var slider = sliders[elem.data('slider')];
			var rand = Math.floor(Math.random() * slider.length);
			elem.val(rand);
		});
		generate_name();
	}
	
	var consPairs = ["bl", "br", "ch", "cl", "cr", "dr", "fl", "fr", "gl", "gr",
		"pl", "pr", "sc", "sh", "sk", "sl", "sm", "sn", "sp", "st", "sw", "th",
		"tr", "tw", "wh", "wr", "sch", "scr", "shr", "sph", "spl", "spr", "squ",
		"str", "thr", "nth"];
	var vowelPairs = ["ai", "au", "aw", "ay", "ea", "ee", "ei", "eu", "ew",
	  "ey", "ie", "oi", "oo", "ou", "ow", "oy"];
</script>