<script>
	$(function(){
		$("button.random").click(random_name)
	
		$( "#sortable" ).sortable();
    $( "#sortable" ).disableSelection();
		$( "#sortable" ).on("sortupdate",generate_name);
		
		if(!Modernizr.inputtypes.range){

		}
		
		if (Modernizr.draganddrop) {
		  // Browser supports HTML5 DnD.
		}

    $('#sortable input').change(function(){
				generate_name();
    });
		
		setup_sliders();
		random_name();
	});
	
	function generate_name(){
		var name = "";
		$('#sortable input').each(function(){
			var slider = sliders[$(this).data('slider')];
			var word = slider[$(this).val()];
			if(name==""){
				name+=word;
			}else{
				name+=" "+word;
			}
		});
		$('#band_name').text(name);
	}
	
	function setup_sliders(){
		$('#sortable input').each(function(){
			var slider = sliders[$(this).data('slider')];
			$(this).attr('max',slider.length-1);
		});
	}
	
	function random_name(){
		$('#sortable input').each(function(){
			var elem = $(this);
			var slider = sliders[elem.data('slider')];
			var rand = Math.floor(Math.random() * slider.length);
			elem.val(rand);
		});
		generate_name();
	}
	
	var sliders = [
		["BABY","SOFT","FUZZY","SLIME","EGG","BOX","MEAT","SHOE","BLACK","WOOD","HORN","STRONG","HAMMER","BULL","IRON","AXE","SWORD","TANK","WAR","NUKE","STAR"],
		["LIGHT","BIRD","RABBIT","RACING","ROCKET","SPINNING","CAR","WIND","WIELDING","BOAT","CARGO","SLIDE","WAGON","ROOSTER","FARM","BUCKET","GRASS","SLUG","WAX"],
		["CLONES","ROBOTS","ROVERS","HACKERS","NERDS","FLYERS","RACERS","HEROES","BUTLERS","MONKS","BAKERS","WANNABES","PREACHERS","SERVANTS","GOBLINS","STOMPERS","HOOLIGANS","MONKEYS","SERPENTS","SLAVES","SAVAGES"]
	]
</script>